{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "*.ts"],
  "exclude": ["node_modules", "public"]
}